<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views https://axelor.com/xml/ns/object-views/object-views_6.1.xsd">

  <grid name="order-line-grid" title="Ordered Items" model="com.axelor.sale.db.OrderLine" expandable="true" editable="true" x-expand-all="items" expandable-form-view="order-line-form-nested">
    <field name="product" onChange="action-order-line-change-product,action-order-line-change-compute"/>
    <field name="price" onChange="action-order-line-change-compute"/>
    <field name="quantity" onChange="action-order-line-change-compute"/>
    <field name="totalPrice" readonly="true"/>
  </grid>

  <form name="order-line-form" title="Ordered Item" model="com.axelor.sale.db.OrderLine">
    <panel title="Overview">
      <field name="product" colSpan="12" onChange="action-order-line-change-product,action-order-line-change-compute"/>
      <field name="price" onChange="action-order-line-change-compute"/>
      <field name="quantity" onChange="action-order-line-change-compute"/>
    <panel-related
        field="items"
        editable="true"
        x-expandable="true"
        x-expandable-form="order-line-form-nested"
        grid-view="order-line-grid"
        form-view="order-line-form"
        colSpan="12"
    />
    </panel>
    <panel-related field="taxes">
      <field name="name" />
      <field name="rate" />
    </panel-related>
  </form>

    <form name="order-line-form-nested" title="Ordered Item" model="com.axelor.sale.db.OrderLine">
    <panel-related
        field="items"
        editable="true"
        x-show-header="false"
        x-expandable="true"
        x-expandable-form="order-line-form"
        x-expand-all="items"
        x-display-mode="tree"
        grid-view="order-line-grid"
        form-view="order-line-form"
        colSpan="12"
    />
  </form>

  <action-record name="action-order-line-change-product" model="com.axelor.sale.db.OrderLine">
    <field name="price" expr="eval: product.price ? product.price : 0.00" if="product"/>
    <field name="quantity" expr="eval: 1"/>
  </action-record>

  <action-record name="action-order-line-change-compute" model="com.axelor.sale.db.OrderLine">
    <field name="totalPrice" expr="eval: price * quantity"/>
  </action-record>

  <action-method name="action-order-line-method-onchange">
    <call class="com.axelor.sale.web.SaleOrderLineController" method="onLineChange"/>
  </action-method>

</object-views>
